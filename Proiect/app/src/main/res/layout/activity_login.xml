    <TextView
        android:id="@+id/androidele_tvRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/androidele_register"
        android:fontFamily="@font/coming_soon"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/androidele_btnLogin"
        app:layout_goneMarginTop="16dp" />

    <ProgressBar
        android:id="@+id/androidele_loginProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/androidele_btnLogin"
        app:layout_constraintVertical_bias="0.407" />

    <Button
        android:id="@+id/androidele_btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:text="@string/androidele_login"
        app:layout_constraintEnd_toEndOf="parent"
        android:fontFamily="@font/coming_soon"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_corners"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/androidele_etPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>