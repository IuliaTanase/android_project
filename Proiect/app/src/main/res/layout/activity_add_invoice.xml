<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddInvoiceActivity">

    <EditText
        android:id="@+id/androidele_etApartmentTitleInvoicesAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/apartment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/androidele_etUtilityNameAddInvoice"
        app:layout_constraintTop_toBottomOf="@id/androidele_etApartmentTitleInvoicesAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        android:hint="@string/utility_id"
        android:layout_marginTop="10dp"></EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/androidele_etDateAddInvoices"
        android:hint="@string/date"
        app:layout_constraintTop_toBottomOf="@id/androidele_etUtilityNameAddInvoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        android:layout_marginTop="10dp"></EditText>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/androidele_etValueAddInvoice"
        app:layout_constraintTop_toBottomOf="@id/androidele_etDateAddInvoices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.18"
        android:hint="@string/invoice_value"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"></EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/androidele_btnSaveAddInvoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="@string/save"
        android:background="@drawable/rounded_corners"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>